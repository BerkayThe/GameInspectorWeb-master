@{
    var hits = (TempData["MostViewed"] as List<HitViewModel>).OrderByDescending(x=>x.Hits).ToList();
}
<div class="sidebar-area">
    <!--Single Sidebar Widget Start-->
    <div class="single-sidebar-widget row">
        <h3 style="color:#c0c0c0">featured games</h3>
        <div class="single-featured-game mb-2">
            <div class="game-img">
                <a href="#"><img src="~/lib/assets/images/banner/sidebar-banner1.jpg" alt=""></a>
                <a class="game-title" href="#">the killer</a>
            </div>
        </div>
        <div class="single-featured-game mb-2">
            <div class="game-img">
                <a href="#"><img src="~/lib/assets/images/banner/sidebar-banner2.jpg" alt=""></a>
                <a class="game-title" href="#">muscle cars</a>
            </div>
        </div>
    </div>
    <!--Single Sidebar Widget End-->
    <!--Single Sidebar Widget Start-->
    <div class="single-sidebar-widget row">
        <h3 style="color: #C0C0C0;">follow us</h3>
        <div class="sidebar-social">
            <ul>
                <li><a class="youtube" href="https://www.youtube.com"><i class="icofont-youtube-play"></i></a></li>
                <li><a class="instagram" href="https://www.instagram.com"><i class="icofont-instagram"></i></a></li>
                <li><a class="twitter" href="https://www.twitter.com"><i class="icofont-twitter"></i></a></li>
            </ul>
        </div>
    </div>
    <!--Single Sidebar Widget End-->
    <!--Single Sidebar Widget Start-->
    <div class="single-sidebar-widget row">
        <h3 style="color: #C0C0C0;">popular/recomended</h3>
        @if (hits.Any())
        {
            for (int i = 0; i < 2; i++)
            {
                var data = hits[i];
                <div class="popular-game">
                    <div class="game-img">
                        <a href="#"><img src="~/img/@hits[i].PhotoPath" alt="@hits[i].Title"></a>
                    </div>
                    <div class="game-content">
                        <h3 style="color: #C0C0C0;"><a href="#">@hits[i].Title</a></h3>
                        <span style="color: #FFFFFF;">pc/xbox/ps4</span>
                    </div>
                </div>
            }
        }

    </div>
    <!--Single Sidebar Widget End-->
</div>