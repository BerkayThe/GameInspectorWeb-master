@model Category
@{ ViewData["Title"] = "Edit Category"; }

<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <div class="card card-primary">

            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="CategoryName">Article Title</label>
                        <input asp-for="CategoryName" class="form-control" placeholder="Title" data-slugify-target="#Slug">
                        <span asp-validation-for="CategoryName"></span>
                </div>
                    </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /.card -->
