@model Category
@{ ViewData["Title"] = "New Category"; }

<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <div class="card card-primary">
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="CategoryName">Category Title</label>
                        <input asp-for="CategoryName" class="form-control" placeholder="Title">
                        <span asp-validation-for="CategoryName"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /.card -->

@section scripts {

    <partial name="_ValidationScriptsPartial" />

    <script>bsCustomFileInput.init();</script>

}